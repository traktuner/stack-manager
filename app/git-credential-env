#!/bin/sh
# Git credential helper that reads from GIT_TOKEN env var.
# Supports GitHub Personal Access Tokens (classic or fine-grained).
# Usage: git config --global credential.helper '/usr/local/bin/git-credential-env'
if [ "$1" != "get" ]; then
    exit 0
fi
if [ -z "$GIT_TOKEN" ]; then
    exit 1
fi
echo "protocol=https"
echo "host=github.com"
echo "username=x-access-token"
echo "password=$GIT_TOKEN"
